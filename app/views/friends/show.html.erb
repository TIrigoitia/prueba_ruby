



<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @friend.first_name %>  <%= @friend.last_name %></h5>
    <p class="card-text">Email: <%= @friend.email %></p>
    <p class="card-text">Phone: <%= @friend.phone %></p>
    <p class="card-text">Twitter: <%= @friend.twitter %></p>
    <%= link_to 'Edit', edit_friend_path(@friend) , class:"btn btn-secondary" %>
    <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %> 
    <%= link_to 'Back', friends_path , class:"btn btn-primary" %>
    

  </div>
</div>
